<AnchorPane prefHeight="600.0" prefWidth="680.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.java2wishlistapp.ProfileController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="140.0" layoutY="50.0" prefHeight="500.0" prefWidth="400.0" styleClass="profile-card" stylesheets="@styles.css" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="140.0" AnchorPane.rightAnchor="140.0" AnchorPane.topAnchor="30.0">
         <children>
            
            <StackPane prefHeight="150.0" prefWidth="400.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" styleClass="profile-banner" />
                  <Circle fx:id="profileCircle" fill="DODGERBLUE" radius="50.0" stroke="WHITE" strokeType="INSIDE" strokeWidth="3.0" StackPane.alignment="BOTTOM_CENTER">
                     <StackPane.margin>
                        <Insets bottom="-30.0" />
                     </StackPane.margin>
                  </Circle>
               </children>
               <VBox.margin>
                  <Insets bottom="40.0" />
               </VBox.margin>
            </StackPane>
            
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Edit Profile" textFill="#a1a1a1">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  
                  <TextField fx:id="txtUsername" editable="false" maxWidth="300.0" promptText="Email" styleClass="profile-field" text="ahmed@gmail.com" />
                  
                  <TextField fx:id="txtEmail" maxWidth="300.0" promptText="User Name" styleClass="profile-field" text="Ahmed Yehia" />
                  
                  <TextField fx:id="txtPhone" maxWidth="300.0" promptText="Old Password" styleClass="profile-field" />
                  <TextField fx:id="txtPhone1" maxWidth="300.0" promptText="New Password" styleClass="profile-field" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </VBox>
            
            <Separator maxWidth="350.0" />
            
            <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0" spacing="40.0">
               <children>
                  <VBox alignment="CENTER" />
                  <Button fx:id="btnSave" mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0" styleClass="btn-primary" text="Save Changes" />
                  
                  <VBox alignment="CENTER" layoutX="186.0" layoutY="10.0" />
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </HBox>
            
            <HBox alignment="CENTER" spacing="15.0">
               <VBox.margin>
                  <Insets bottom="20.0" top="10.0" />
               </VBox.margin>
            </HBox>

         </children>
         <effect>
            <javafx.scene.effect.DropShadow color="#00000020" radius="15.0" spread="0.1" />
         </effect>
      </VBox>
   </children>
</AnchorPane>
