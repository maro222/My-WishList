<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="260.0" prefWidth="220.0" styleClass="item-card" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.java2wishlistapp.FriendItemCardController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="14.0" layoutY="14.0" prefHeight="260.0" prefWidth="220.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fx:id="imgItem" fitHeight="110.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </ImageView>
            
            <Label fx:id="lblName" text="PlayStation 5">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            
            <Label fx:id="lblPrice" text="\$ 500.00" textFill="#2d3447">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Collected:" textFill="#909090">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblCollected" text="\$ 200" textFill="#4cd137">
                     <font>
                        <Font name="System Bold" size="10.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
            
            <ProgressBar fx:id="progressBar" prefWidth="180.0" progress="0.4" style="-fx-accent: #4cd137;">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </ProgressBar>
            
            <Button fx:id="btnContribute" mnemonicParsing="false" onAction="#handleContribute" styleClass="btn-primary" text="Contribute" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="15.0" top="15.0" />
               </VBox.margin>
               <font>
                  <Font size="11.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>