<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="680.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.java2wishlistapp.FriendsListController">
   <children>
      
      <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="680.0" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="My Friends" textFill="#2d3447">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            
            <HBox HBox.hgrow="ALWAYS" />
            
            <TextField prefWidth="200.0" promptText="Find a friend..." styleClass="profile-field" stylesheets="@styles.css" />
            <!--<TextField fx:id="txtSearch" onKeyReleased="#handleSearch" promptText="Find a friend..." styleClass="profile-field" stylesheets="@styles.css" prefWidth="200.0" />-->
            
            <Button mnemonicParsing="false" styleClass="btn-primary" stylesheets="@styles.css" text="+ Add Friend" />
         </children>
         <padding>
            <Insets left="30.0" right="30.0" />
         </padding>
      </HBox>
      
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" layoutY="80.0" prefHeight="520.0" prefWidth="680.0" style="-fx-background-color: transparent;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="80.0">
         <content>
            <GridPane fx:id="friendsGrid" hgap="20.0" vgap="20.0">
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <padding>
                  <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
               </padding>
            </GridPane>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
