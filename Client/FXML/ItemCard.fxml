<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250.0" prefWidth="220.0" styleClass="item-card" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.java2wishlistapp.ItemCardController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="60.0" layoutY="14.0" prefHeight="250.0" prefWidth="220.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fx:id="imgItem" fitHeight="110.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </ImageView>
            
            <Label fx:id="lblName" text="PlayStation 5">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            
            <Label fx:id="lblPrice" text="\$ 500.00" textFill="#2d3447">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            
            <ProgressBar fx:id="progressBar" prefWidth="180.0" progress="0.4" style="-fx-accent: #00d2d3;">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </ProgressBar>
            
            <Button mnemonicParsing="false" onAction="#handleDelete" style="-fx-background-color: #ff5e5e; -fx-text-fill: white; -fx-background-radius: 20;" text="Remove">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
               <font>
                  <Font size="11.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>